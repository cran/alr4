citHeader("To cite the alr3 package in publications use:")

citEntry(entry = "Book",
  title        = "Applied Linear Regression",
  edition	   = "Fourth",
  author       = personList(as.person("Sanford Weisberg")),
  year         = "2013",
  publisher    = "Wiley",
  address      = "Hoboken {NJ}",
  url          = "http://www.stat.umn.edu/alr",

  textVersion  =
  paste("Sanford Weisberg (2012).",
        "Applied Linear Regression, Fourth Edition.",
        "Hoboken NJ:  Wiley.",
        "URL: http://www.stat.umn.edu/alr")
)
